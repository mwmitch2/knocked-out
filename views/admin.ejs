<%- include('./partials/head') %>
<%- include('./partials/header') %>

<body>
    <div class="container mt-5">
        <h2 class="center">Individual Teams</h2>
        <div class="mt-3">
            <ul class="list-group" id="list-container">
                <!-- ajax script will populate this with list-group-items for each team in the database -->
                <!-- Examples: -->
                <li class="list-group-item p-3 team-listItem" id="someTeam-listItem"><span
                        class="middle">Caffeinated Foxes</span>
                    <button type="button" id="someTeam-btn" class="btn btn-outline-danger float-end deleteBtn"
                        data-bs-toggle="modal" data-bs-target="#deleteModal" value="Caffeinated Foxes"
                        onclick="executeModal(this)">Delete</button>
                </li>
                <li class="list-group-item p-3 team-listItem" id="someOtherTeam-listItem"><span
                        class="middle">The System Errors</span>
                    <button type="button" id="someOtherTeam-btn"
                        class="btn btn-outline-danger float-end deleteBtn" data-bs-toggle="modal"
                        data-bs-target="#deleteModal" value="The System Errors"
                        onclick="executeModal(this)">Delete</button>
                </li>
                <li class="list-group-item p-3 team-listItem" id="team 3-listItem"><span 
                    class="middle">AWESOM-O-340</span>
                    <button type="button" id="team 3-btn" class="btn btn-outline-danger float-end deleteBtn"
                        data-bs-toggle="modal" data-bs-target="#deleteModal" value="AWESOM-O-340"
                        onclick="executeModal(this)">Delete</button>
                </li>
                <li class="list-group-item p-3 team-listItem" id="gryffindor-listItem"><span
                        class="middle">AJA</span>
                    <button type="button" id="gryffindor-btn" class="btn btn-outline-danger float-end deleteBtn"
                        data-bs-toggle="modal" data-bs-target="#deleteModal" value="AJA"
                        onclick="executeModal(this)">Delete</button>
                </li>
                <li class="list-group-item p-3 team-listItem" id="houseStark-listItem"><span
                        class="middle">XJM</span>
                    <button type="button" id="houseStark-btn" class="btn btn-outline-danger float-end deleteBtn"
                        data-bs-toggle="modal" data-bs-target="#deleteModal" value="XJM"
                        onclick="executeModal(this)">Delete</button>
                </li>
                <li class="list-group-item p-3 team-listItem" id="lastTeam-listItem"><span
                        class="middle">The Brogrammers</span>
                    <button type="button" id="lastTeam-btn" class="btn btn-outline-danger float-end deleteBtn"
                        data-bs-toggle="modal" data-bs-target="#deleteModal" value="The Brogrammers"
                        onclick="executeModal(this)">Delete</button>
                </li>
            </ul>
        </div>

    </div>

    <!-- sets team name for modal delete confirmation popup -->
    <script type="text/javascript">
        function executeModal(element) {
            var name = element.value;
            var modalBody = document.getElementById("confirm-delete-msg");
            modalBody.innerHTML = `Are you sure you want to delete team <span class="text-danger">${name}</span>? This action cannot be undone.`;
            document.getElementById("delete-confirm-btn").value = name;
        }
    </script>

    <!-- Modal -->
    <div class="modal fade" id="deleteModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Delete Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="modal-body">
                    <h8 id="confirm-delete-msg">
                        <!-- Are you sure you want to delete team someTeam? This action cannot be undone. -->
                    </h8>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="delete-confirm-btn"
                        onclick="deleteTeam(this)">Delete</button>
                </div>
            </div>
        </div>
    </div>

    <link rel="stylesheet" href="/stylesheets/admin.css">
</body>

<%- include('./partials/footer') %>